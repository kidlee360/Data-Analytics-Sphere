{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // server_src/tsconfig.json (inside "compilerOptions")

    "target": "es6", 
    "module": "commonjs", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",


    // ADD or adjust this line:
    "moduleResolution": "node", // Tells TypeScript to resolve modules using Node.js logic
  }
}
